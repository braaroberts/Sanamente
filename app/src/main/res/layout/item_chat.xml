<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texto"
        android:clickable="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/butonShare"
            android:drawableBottom="@android:drawable/ic_menu_share"></Button>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/butonShare2"
            android:drawableBottom="@android:drawable/star_big_on"></Button>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/butonShare3"
            android:drawableBottom="@android:drawable/star_big_off"></Button>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/butonShare4"
            android:drawableBottom="@android:drawable/star_off" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/edit"
            android:drawableBottom="@android:drawable/ic_menu_edit" />

    </LinearLayout>



</LinearLayout>