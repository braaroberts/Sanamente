<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarActivity"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texto1"
        android:clickable="true"
        android:hint="Primer parte del mensaje"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Spinner
            android:id="@+id/spinnerDias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerHoras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texto2"
        android:clickable="true"
        android:hint="Segunda parte del mensaje"/>



        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/guardar"
            android:drawableBottom="@android:drawable/ic_menu_save"
            android:layout_gravity="center"></Button>





</LinearLayout>